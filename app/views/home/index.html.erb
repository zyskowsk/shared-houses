<div class="row">
	<div class="span12">
		<div class="span5 offset3">
			<h1>Welcome to shared houses!</h1>
			<h2>This is an app to make your shared housing experience a breeze!</h2>
			<div class="welcome btn-group">
				<button class="btn btn-info sign_in_button">Already have an account?</button>
				<button class="btn btn-warning sign_up_button">Start Sharing in your house!</button>
			</div>
			<div class="welcome welcome_sign_in">		
					<h1>We live at</h1>
				<%= form_for(house_resource, :html => {:class => "form-horizontal"}, 
											 :as => house_resource_name, 
											 :url => session_path(house_resource_name)) do |f| %>
					<div class="control-group">
						<%= f.label :address, :class => "control-label"%>
						<div class="controls">
					  	  <%= f.text_field :login, :class=>"input-medium", :placeholder=>"address" %>
					    </div>
				    </div>
					<div class="control-group">
						<%= f.label :password, :class => "control-label"%>
						<div class="controls">
					  	  <%= f.password_field :password, :class=>"input-medium", :placeholder=>"password" %>
					    </div>
				    </div>
					<div clas="control-group">
						<div class="controls">
					  	  <%= f.submit "Start Sharing!", :class=>"btn btn-info" %>
					    </div>
					</div>
				<% end %>
			</div>
			<div class="welcome welcome_sign_up">
				<h2>Sign up</h2>

				<%= form_for(house_resource, :html => {:class => "form-horizontal"},
											 :as => house_resource_name, 
											 :url => registration_path(house_resource_name)) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="control-group">
				  	<%= f.label :address, :class => "control-label" %>
					<div class="controls">
				  		<%= f.text_field :address, :autofocus => true, :class => "input-medium"%>
					</div>
				  </div>
  
    			  <div class="control-group">
				  	<%= f.label :city, :class => "control-label"%>
					<div class="controls">
				  		<%= f.text_field :city, :autofocus => true, :class => "input-medium" %>
					</div>
				  </div>

  				  <div class="control-group">
				  	<%= f.label :email, :class => "control-label" %>
					<div class="controls">
				  		<%= f.email_field :email, :autofocus => true, :class => "input-medium" %>
					</div>
				  </div>

				  <div class="control-group">
				  	<%= f.label :password, :class => "control-label" %>
					<div class="controls">
				  		<%= f.password_field :password, :class => "input-medium" %>
					</div>
				  </div>

  				  <div class="control-group">
				  	<%= f.label :password_confirmation, :class => "control-label" %>
					<div class="controls">
				  		<%= f.password_field :password_confirmation, :class => "input-medium" %>
					</div>
			  	  </div>
				  
				  <div class="control-group">
					<div class="controls">
					  	<%= f.submit "Sign up", :class => "btn btn-warning" %>
				  	</div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
</div>
